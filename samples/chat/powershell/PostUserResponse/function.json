{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "Request",
      "route": "chats/{chatId}",
      "methods": [
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "Response"
    },
    {
      "type": "assistantPost",
      "direction": "in",
      "name": "ChatBotState",
      "id": "{chatId}",
      "model": "%CHAT_MODEL_DEPLOYMENT_NAME%",
      "userMessage": "{Query.message}",
      "chatStorageConnectionSetting": "AzureWebJobsStorage",
      "collectionName": "ChatState"
    }
  ]
}